<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#18364B"
    android:orientation="vertical"
    android:weightSum="10">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin tài khoản"
            android:textColor="#F4F4EF"
            android:textSize="35dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:src="@drawable/img_avatar"
            app:civ_border_color="#3F51B5"
            app:civ_border_width="5dp">
        </de.hdodenhof.circleimageview.CircleImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_thongtin"
            />

        <EditText
            android:inputType="text"
            android:maxLength="30"
            android:id="@+id/edtTenNV"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phạm Chí Cong"
            android:textColor="#F4F4EF"
            android:textSize="25dp"
            android:enabled="false"
            />
        <ImageView
            android:id="@+id/ivChangeTen"
            android:layout_marginLeft="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_edit"
            android:layout_gravity="center"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnchangePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_phone"
            />
        <EditText
            android:maxLength="11"
            android:id="@+id/edtSoDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0123456789"
            android:textColor="#F4F4EF"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:inputType="number"
            android:enabled="false"
            />
        <ImageView
            android:id="@+id/ivChangeSDT"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_edit"
            android:layout_marginLeft="15dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_cmnd"
            />
        <EditText
            android:id="@+id/edtCMND"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="212818436"
            android:textColor="#F4F4EF"
            android:layout_marginLeft="15dp"
            android:textSize="25dp"
            android:inputType="number"
            android:enabled="false"
            android:maxLength="15"
            />
        <ImageView
            android:id="@+id/ivChangeCMND"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_edit"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_lichlamviec"
            />
        <TextView
            android:id="@+id/tvLichLamViec"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lịch làm việc"
            android:textColor="#F4F4EF"
            android:layout_marginLeft="15dp"
            android:textSize="25dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_luongnhanvien"
            />
        <TextView
            android:id="@+id/tvLuong"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin lương"
            android:textColor="#F4F4EF"
            android:layout_marginLeft="15dp"
            android:textSize="25dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnchange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ivDoiMK"
            android:layout_marginLeft="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_change"
            />
        <TextView
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:id="@+id/tvDoiMK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi Mật khẩu"
            android:textColor="#F4F4EF"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="13dp"
            android:textSize="25dp"
            />

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <Button
            android:id="@+id/btnLuu"
            android:layout_gravity="center"
            android:backgroundTint="#25BDAF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:layout_marginLeft="100dp"
            />
        <Button
            android:layout_gravity="center"
            android:id="@+id/btnTroVe"
            android:backgroundTint="#25BDAF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trở về"
            android:layout_marginLeft="50dp"
            />
    </LinearLayout>


</LinearLayout>