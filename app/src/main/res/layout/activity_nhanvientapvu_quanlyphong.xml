<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#18364B"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý phòng"
        android:textColor="#F4F4EF"
        android:textSize="25dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:textStyle="bold"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập thông tin cần tìm"
            android:textColor="#F4F4EF"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_timkiem"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã dọn"
            android:textColor="#F4F4EF"
            android:layout_marginLeft="20dp"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa dọn"
            android:textColor="#F4F4EF"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách phòng"
        android:textColor="#F4F4EF"
        android:gravity="center"
        android:textSize="20dp"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phòng:1"
            android:textColor="#F4F4EF"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kiểm tra tình trạng phòng"
            android:layout_gravity="center"
            />

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trở về"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        />



</LinearLayout>