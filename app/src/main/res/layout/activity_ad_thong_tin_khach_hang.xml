<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#18364B"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".AD_HienThiDanhSachNhanVien">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="Thông Tin Khách Hàng"
            android:textColor="#fff"
            android:textSize="30dp">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/img_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:background="#3a5263"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:weightSum="6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:text="Mã Khách Hàng:"
                android:textColor="#fff"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp">
            </TextView>
            <TextView
                android:text="Tên Khách Hàng:"
                android:textColor="#fff"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp">
            </TextView>
            <TextView
                android:text="Số Điện Thoại:"
                android:textColor="#fff"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp">
            </TextView>
            <TextView
                android:text="Địa Chỉ:"
                android:textColor="#fff"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp">
            </TextView>
            <TextView
                android:text="CMND/CCCD:"
                android:textColor="#fff"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:weightSum="6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:text="TV001"
                android:textColor="#fff"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp">
            </TextView>
            <TextView
                android:text="Phúc Kute"
                android:textColor="#fff"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp">
            </TextView>
            <TextView
                android:text="0933 999 000"
                android:textColor="#fff"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp">
            </TextView>
            <TextView
                android:text="HolyWood"
                android:textColor="#fff"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp">
            </TextView>
            <TextView
                android:text="1230987641"
                android:textColor="#fff"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_edit">
            </ImageButton>
            <TextView
                android:text="Chuyển thành nhân viên"
                android:textColor="#fff"
                android:layout_weight="1"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp">
            </TextView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#25BDAF"
            android:text="Trở Về"
            android:textSize="20dp"></Button>
    </LinearLayout>


</LinearLayout>