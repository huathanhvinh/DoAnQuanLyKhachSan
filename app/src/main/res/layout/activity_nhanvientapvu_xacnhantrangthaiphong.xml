<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#18364B"
    android:weightSum="12"
    android:orientation="vertical">
    <LinearLayout
        android:gravity="center"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý phòng"
            android:textColor="#fff"
            android:textSize="40dp"
            android:layout_gravity="center"
            android:textStyle="bold"

            />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <TextView

            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã phòng : "
            android:textColor="#F4F4EF"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/tvMaPhong"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            android:textColor="#F4F4EF"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại phòng : "
            android:textColor="#F4F4EF"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/tvLoaiPhong"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn"
            android:textColor="#F4F4EF"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng Thái : "
            android:textColor="#F4F4EF"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/tvTrangThai"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đầy"
            android:textColor="#F4F4EF"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <CheckBox
            android:layout_gravity="center"
            android:id="@+id/ckDonPhong"
            android:layout_marginLeft="10dp"
            android:text="Đã dọn phòng"
            android:textColor="#F3EEEE"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </CheckBox>
        <CheckBox
            android:layout_gravity="center"
            android:id="@+id/ckThucAn"
            android:layout_marginLeft="50dp"
            android:text="Gọi thức ăn"
            android:textColor="#F3EEEE"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </CheckBox>
    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <CheckBox
            android:layout_gravity="center"
            android:id="@+id/ckTuLanh"
            android:layout_marginLeft="10dp"
            android:text="Sử dụng tủ lạnh"
            android:textColor="#F3EEEE"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </CheckBox>
        <CheckBox
            android:layout_gravity="center"
            android:id="@+id/ckMaKM"
            android:layout_marginLeft="30dp"
            android:text="Sử dụng mã khuyến mãi "
            android:textColor="#F3EEEE"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </CheckBox>
    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <CheckBox
            android:layout_gravity="center"
            android:id="@+id/ckRuou"
            android:layout_marginLeft="10dp"
            android:text="Sử dụng rượu"
            android:textColor="#F3EEEE"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </CheckBox>
        <CheckBox
            android:layout_gravity="center"
            android:id="@+id/ckVatDung"
            android:layout_marginLeft="50dp"
            android:text="Vật dụng trong phòng"
            android:textColor="#F3EEEE"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </CheckBox>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:id="@+id/btnXacNhan"
            android:layout_gravity="center"
            android:backgroundTint="#25BDAF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận"
            />
        <Button
            android:id="@+id/btnTroVe"
            android:layout_gravity="center"
            android:backgroundTint="#25BDAF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trở về"
            android:layout_marginLeft="80dp"
            />
    </LinearLayout>
</LinearLayout>