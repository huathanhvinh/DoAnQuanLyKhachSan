<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#18364B"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hotelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="VICTORY"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="120px"
            android:textStyle="bold"></TextView>

        <ImageView
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_gravity="center"
            android:src="@drawable/logo"></ImageView>

        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="120px"
            android:text="Sign In"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="72px"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:text="Tài khoản"
            android:textColor="#ffff"
            android:textSize="36px"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/txtUserName"
            android:layout_width="700px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90px"
            android:background="#ffff"
            android:hint="Nhập tài khoản"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPassWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:text="Mật Khẩu"
            android:textColor="#ffff"
            android:textSize="36px"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/txtPassWord"
            android:layout_width="700px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90px"
            android:background="#ffff"
            android:hint="Nhập Mật Khẩu"
            android:inputType="textPassword"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5px"
        android:layout_marginTop="20px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCfPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận MK"
            android:textColor="#ffff"
            android:textSize="36px"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/txtCfPassword"
            android:layout_width="700px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:background="#ffff"
            android:hint="Nhập Lại Mật Khẩu"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5px"
        android:layout_marginTop="20px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textColor="#ffff"
            android:textSize="36px"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/txtPhone"
            android:layout_width="700px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:background="#ffff"
            android:hint="Nhập Số điện thoại"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:textAlignment="center"

        >

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_checkbox"
            android:text="Tôi đồng ý với điều khoản"
            android:textColor="#ffff"></CheckBox>

        <TextView
            android:id="@+id/tvQuenMK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:text="Điều khoản"
            android:textColor="#ffff"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="60px"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:textAlignment="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="60px"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:textAlignment="center">

            <Button
                android:id="@+id/btnSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20px"
                android:background="@drawable/custom_button"
                android:text="SignIn"
                android:textColor="#ffff"
                android:textSize="24dp"></Button>

            <Button
                android:id="@+id/btnReturn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:background="@drawable/custom_button"
                android:text="Return"
                android:textColor="#ffff"
                android:textSize="24dp"></Button>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>