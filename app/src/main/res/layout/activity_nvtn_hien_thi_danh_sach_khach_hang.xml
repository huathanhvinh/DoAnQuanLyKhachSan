<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#18364b"
    tools:context=".nhanvien_thungan.NVTN_HienThiDanhSachKhachHang">

    <TextView
        android:textColor="#ffffff"
        android:layout_marginTop="18dp"
        android:textSize="30dp"
        android:text="Quản Lý Khách Hàng"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="50dp"
            app:cardCornerRadius="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edtTimKiem"
                android:hint="Nhập thông tin cần tìm..."
                android:background="#ffffff"
                android:layout_width="250dp"
                android:layout_height="35dp"/>
        </androidx.cardview.widget.CardView>

        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/icon_timkiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:text="Danh Sách khách hàng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/lvKhachHang"
        tools:listitem="@layout/listview_nvtn_hienthidanhsachkhachhang"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnThem"
            android:backgroundTint="#02A9B2"
            android:text="Thêm"
            android:layout_marginLeft="10dp"
            android:layout_width="150dp"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/btnTroVe"
            android:backgroundTint="#02A9B2"
            android:text="Trở Về"
            android:layout_marginLeft="80dp"
            android:layout_width="150dp"
            android:layout_height="50dp"/>
    </LinearLayout>
</LinearLayout>