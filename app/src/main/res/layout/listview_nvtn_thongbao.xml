<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:weightSum="10"
    android:background="#DAC4C4C4"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tvID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STT : 01"
            android:textColor="#12CC19"
            android:textSize="25dp"
            >
        </TextView>


        <TextView
            android:id="@+id/tvNoiDung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:text="Nội dung"
            android:textColor="#12CC19"
            android:textSize="25dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tvGio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:00"
            android:textColor="#FFEB3B"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/tvNgay"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25/09/2021"
            android:textColor="#FFEB3B"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/tvDangKyDichVu"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký dịch vụ"
            android:textColor="#FFEB3B"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <Button
            android:backgroundTint="#02A9B2"
            android:id="@+id/btnChiTiet"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiết"
            />

        <Button
            android:backgroundTint="#02A9B2"
            android:id="@+id/btnXacNhan"
            android:layout_gravity="center"
            android:layout_marginLeft="160dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận"
            />

    </LinearLayout>

</LinearLayout>