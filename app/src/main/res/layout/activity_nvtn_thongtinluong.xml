<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#18364B"
    android:orientation="vertical"
    android:weightSum="10">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin lương"
            android:textColor="#F4F4EF"
            android:textSize="35dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            />
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên nhân viên :"
            android:textColor="#F4F4EF"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/tvTenNV"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lê Hoàng Phúc"
            android:textColor="#F4F4EF"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại nhân viên :"
            android:textColor="#F4F4EF"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/tvLoaiNV"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thu Ngân"
            android:textColor="#F4F4EF"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"

            />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="300dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:background="#fff"
            />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lương :"
            android:textColor="#F4F4EF"
            android:textSize="20dp"

            />
        <TextView
            android:id="@+id/tvLuong"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.000.000 đ"
            android:textColor="#F44336"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"

            />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiền thưởng :"
            android:textColor="#F4F4EF"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/tvTienThuong"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 đ"
            android:textColor="#F44336"
            android:textSize="20dp"


            />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <Button
            android:id="@+id/btnTroVe"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Trở về"
            android:layout_gravity="center"
            android:backgroundTint="#25BDAF"
            />
    </LinearLayout>
</LinearLayout>