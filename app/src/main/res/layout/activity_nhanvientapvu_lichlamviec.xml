<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#18364B"
    android:weightSum="10"
    android:orientation="vertical">
    <LinearLayout

        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin lịch làm việc"
            android:textColor="#FFC107"
            android:textSize="25dp"
            android:gravity="center"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/rounded_corner_view"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên nhân viên :"
            android:textColor="#FFC107"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/tvTenNhanVien"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lê Hoàng Phắc Boiz"
            android:textColor="#FFC107"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner_view"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ca làm             :"
            android:textColor="#FFC107"
            android:textSize="20dp" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/tvCaLam"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ca sáng"
            android:textColor="#FFC107"
            android:textSize="20dp"

            />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="______________________________________________"
            android:layout_gravity="center"
            android:textColor="#F4F4EF"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="Ghi chú :"
            android:textColor="#FFC107"
            android:textSize="20dp" />

    </LinearLayout>
<ScrollView
    android:layout_width="0dp"
    android:layout_height="0dp">
</ScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/rounded_corner_view"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvGhiChu"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Làm việc lười biếng,thường xuyên sử dụng điện thoại trong giờ làm việc"
            android:textColor="#FFC107"
            android:textSize="20dp"
            android:enabled="false"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <Button
            android:id="@+id/btnTroVe"
            android:gravity="center"
            android:backgroundTint="#25BDAF"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Trở về"
            android:layout_gravity="center"
            />

    </LinearLayout>

</LinearLayout>