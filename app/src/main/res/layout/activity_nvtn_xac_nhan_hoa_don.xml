<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="#18364B"
    android:orientation="vertical"
    tools:context=".nhanvien_letan.NVTN_XacNhanHoaDon">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="#fff"
            android:text="Hóa Đơn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:weightSum="5"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textSize="18dp"
                android:textColor="#fff"
                android:text="Mã Hóa Đơn :"
                android:layout_width="90dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="18dp"
                android:id="@+id/tvMaHD"
                android:paddingLeft="5dp"
                android:textColor="#fff"
                android:text="HD01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textSize="18dp"
                android:textColor="#fff"
                android:text="Khách hàng:"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="18dp"
                android:id="@+id/tvKH"
                android:paddingLeft="5dp"
                android:textColor="#fff"
                android:text="Lê Hoàng Phúc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textSize="18dp"
                android:textColor="#fff"
                android:text="Nhân viên :"
                android:layout_width="90dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="18dp"
                android:id="@+id/tvTenNV"
                android:paddingLeft="5dp"
                android:textColor="#fff"
                android:text="Hứa Thành Vinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textSize="18dp"
                android:textColor="#fff"
                android:text="Ngày lập hóa đơn :"
                android:layout_width="130dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="18dp"
                android:id="@+id/tvNgayLapHD"
                android:paddingLeft="5dp"
                android:textColor="#fff"
                android:text="24/09/2021"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textSize="18dp"
                android:textColor="#fff"
                android:text="Danh sách tính phí:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="3dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:weightSum="6"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textSize="18dp"
                android:textColor="#fff"
                android:text="Thuê phòng :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:textSize="18dp"
                android:textColor="#fff"
                android:text="Tên Phòng"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="18dp"
                android:layout_marginHorizontal="30dp"
                android:textColor="#fff"
                android:text="Thời gian thuê"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="18dp"
                android:textColor="#fff"
                android:text="Thành tiền"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:textSize="18dp"
                android:id="@+id/tvPhong"
                android:textColor="#fff"
                android:text="Phòng 02 (Đôi)"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="18dp"
                android:id="@+id/tvTGThue"
                android:layout_marginHorizontal="30dp"
                android:textColor="#fff"
                android:text="1 ngày"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="18dp"
                android:id="@+id/tvThanhTien"
                android:textColor="#fff"
                android:text="200.000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textSize="18dp"
                android:textColor="#fff"
                android:text="Thuê dịch vụ :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:textSize="18dp"
                android:textColor="#fff"
                android:text="Tên dịch vụ"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="18dp"
                android:layout_marginHorizontal="30dp"
                android:textColor="#fff"
                android:text="Số lần sử dụng"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="18dp"
                android:textColor="#fff"
                android:text="Thành tiền"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:textSize="18dp"
                android:textColor="#fff"
                android:text="Giặt giũ quần áo"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="18dp"
                android:layout_marginHorizontal="30dp"
                android:textColor="#fff"
                android:text="1 lần"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="18dp"
                android:textColor="#fff"
                android:text="50.000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:textSize="18dp"
                android:textColor="#fff"
                android:text="Đặt thức ăn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="18dp"
                android:layout_marginHorizontal="30dp"
                android:textColor="#fff"
                android:text="3 lần"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="18dp"
                android:textColor="#fff"
                android:text="300.000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textColor="#fff"
            android:text="Tổng Tiền :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvTongTien"
            android:paddingRight="10dp"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:textSize="25dp"
            android:textColor="#fff"
            android:text="550.000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:paddingTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18dp"
                android:textColor="#fff"
                android:text="Người thu"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="18dp"
                android:id="@+id/tvNhanVien"
                android:paddingRight="20dp"
                android:gravity="right"
                android:textColor="#fff"
                android:text="Hứa Thành Vinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18dp"
                android:textColor="#fff"
                android:text="Khách hàng"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="18dp"
                android:id="@+id/tvTenKH"
                android:paddingRight="20dp"
                android:gravity="right"
                android:textColor="#fff"
                android:text="Lê Hoàng Phúc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnXacNhan"
        android:layout_marginTop="30dp"
        android:backgroundTint="#02A9B2"
        android:layout_gravity="center"
        android:text="Xác Nhận Hóa Đơn"
        android:layout_width="190dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnTroVe"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:backgroundTint="#02A9B2"
        android:text="Trở Về"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>
</LinearLayout>