<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#18364B"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hotelName"
            android:text="VICTORY"
            android:textColor="#ffff"
            android:textSize="120px"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center_horizontal">
        </TextView>
        <ImageView
            android:layout_width="300px"
            android:layout_height="300px"
            android:src="@drawable/logo"
            android:layout_gravity="center">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtLogin"
            android:text="Sign In"
            android:textColor="#ffff"
            android:textSize="72px"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"
            android:paddingTop="120px"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tài khoản"
            android:textColor="#ffff"
            android:textSize="36px"
            android:textStyle="bold"
            android:layout_marginLeft="5px"
            ></TextView>

        <EditText
            android:layout_width="700px"
            android:layout_height="wrap_content"
            android:id="@+id/txtUserName"
            android:hint="Nhập tài khoản"
            android:background="#ffff"
            android:layout_marginLeft="90px"
            ></EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPassWord"
            android:text="Mật Khẩu"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:textSize="36px"
            android:layout_marginLeft="5px"
            ></TextView>

        <EditText
            android:id="@+id/txtPassWord"
            android:layout_width="700px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90px"
            android:background="#ffff"
            android:hint="Nhập Mật Khẩu"></EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20px"
        android:layout_marginLeft="5px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCapcha"
            android:text="Capcha"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:textSize="36px"></TextView>

        <EditText
            android:id="@+id/txtCapcha"
            android:layout_width="700px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:background="#ffff"
            android:hint="Nhập Capcha"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:textAlignment="center"

        >

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tôi đồng ý với điều khoản"
            android:textColor="#ffff"
            android:button="@drawable/custom_checkbox"
            ></CheckBox>

        <TextView
            android:id="@+id/tvQuenMK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điều khoản"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:layout_marginLeft="60px"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_margin="60px"
        >
        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/custom_button"
            android:text="SignIn"
            android:id="@+id/btnSignIn"
            android:textSize="24dp"
            android:textColor="#ffff"
            android:layout_marginRight="20px"
            ></Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/custom_button"
            android:text="Return"
            android:id="@+id/btnReturn"
            android:textSize="24dp"
            android:textColor="#ffff"
            android:layout_marginLeft="20px"
            ></Button>
    </LinearLayout>
</LinearLayout>