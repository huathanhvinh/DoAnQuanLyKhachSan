<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="Tên Dịch Vụ: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tvTenDichVu"
            android:textSize="25dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="Là Quần Áo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="Giá: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/tvgiaDV"
            android:textSize="25dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="200,000 VND"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tvDVT"
            android:textSize="25dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="Ngày"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnChiTietDichVu"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Xem Thông Tin Dịch Vụ"
            android:backgroundTint="#25BDAF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Button>

    </LinearLayout>

</LinearLayout>